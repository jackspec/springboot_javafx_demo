<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.turbo00.springboot_javax_study1.interfaces.javafx.para.CustomerAdminController">
    <top>
        <HBox>
            <children>
                <Button minHeight="-Infinity" minWidth="-Infinity" text="新增" onAction="#btnAddClicked">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </Button>
                <Button minHeight="-Infinity" minWidth="-Infinity" text="修改" onAction="#btnModifyClicked">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </Button>
                <Button minHeight="-Infinity" minWidth="-Infinity" text="删除" onAction="#btnDeleteClicked">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </Button>
                <Button minHeight="-Infinity" minWidth="-Infinity" text="刷新" onAction="#btnRefreshClicked">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </top>
    <center>
        <VBox fx:id="vboxParent">
            <children>
                <TableView fx:id="tblCustomer" />
                <Pagination fx:id="pagi" pageCount="10" BorderPane.alignment="CENTER" />
            </children>
        </VBox>
    </center>
</BorderPane>
